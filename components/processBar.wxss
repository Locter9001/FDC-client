.entry-top {
    width: 100%;
    height: 120rpx;
}

.entry-top .order_process {
    display: flex;
    flex-wrap: nowrap;
    padding: 10rpx 44rpx;
}

.entry-top .process_wrap {
    display: flex;
    flex-direction: column;
    flex: 1;
    align-items: center;
}

.entry-top .process {
    display: flex;
    align-items: center;
    width: 100%;
}

.entry-top .process_icon {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    line-height: 50rpx;
    text-align: center;
    border: 2rpx solid #fff;
    color: #fff;
}

.entry-top .process_line {
    background: #4094f4;
    flex: 1;
    height: 5rpx;
}

.entry-top .process-opcity {
    opacity: 0.6;
}

.entry-top .process_name {
    font-size: 24rpx;
    color: #333333;
    opacity: 0.5;
    line-height: 60rpx;
}

.entry-top .name-active {
    opacity: 1;
}

.entry-top .line-active {
    opacity: 1;
}

.entry-top .icon-active {
    background: #4094f4;
}

.entry-top .icon-noactive {
    background: transparent;
}

.opacity10 {
    opacity: 1;
}

.opacity5 {
    opacity: 0.5;
}

.bg-transparent {
    background: transparent !important;
}

.active-bg {
    background: #4094f4 !important;
}
