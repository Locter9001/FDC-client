Page{
    background-color: #F1F5F9;
}

.redTitle {
    color: red;
    font-size: 17px;
    font-weight: bolder;
    line-height: 17px;
}

.imagerSwiper {
    width: 100%;
    height: 260px;
}

.InfoBoxStyle {
    padding: 20rpx;
    background-color: #FFF;
    margin-bottom: 40rpx;
}

.topLine {
    width: 100%;
    height: 25px;
    font-size: larger;
    font-weight: bold;
    margin: 5px 0;
    /*background-color: antiquewhite;*/
}

.tags {
    display: flex;
    flex-direction: row;
    margin: 5px 0;
}

.tags-view {
    margin-right: 5px;
}

.top-content {
    width: 100%;
    height: 90px;
    margin: 5px 0;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
}

.top-content-line {
    width: 100%;
    /*height: 24px;*/
    display: flex;
    flex-direction: row;
}

.top-content-line-title {
    min-width: 70px;
    min-height: 24px;
    max-height: 44px;
    font-size: 13px;
    font-weight: lighter;
    color: #9B9B9B;

    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.top-content-line-content {
    width: 285px;
    word-wrap: break-word;
    height: auto;
    font-size: 13px;
    /*padding-top: 4px;*/
}

.more {
    width: 100%;
    height: 35px;
    background-color: #F8FAFC;
    letter-spacing: 3px;
    font-size: 14px;
    color: #B9B9B9;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}


.houseTypes {
    width: 100%;
    height: 500rpx;
    margin-top: 20rpx;
    /*background-color: blue;*/
    display: flex;
    flex-direction: row;
}

::-webkit-scrollbar {
    display:none;
    width:0;
    height:0;
    color:transparent;
}

.houseTypes-Info {
    width: 420rpx;
    height: 500rpx;
    margin-right: 20px;
}

.houseTypes-image {
    width: inherit;
    height: 300rpx;
    border: solid 1px #ececec;
}


.houseInfo-bold {
    font-weight: bold;
}

.houseInfo-line {
    width: 100%;
    height: 50rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.map {
    width: 100%;
    height: 400rpx;
    margin-top: 20rpx;
}