.GoodsType {
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    /* background-color: #fdfdfd; */
    /*border-bottom: solid 1px #ececed;*/
}

::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}

.tags {
    width: 100%;
    height: 80rpx;
    /*background-color: #f5f5f5;*/
    line-height: 0;
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
}

.upload {
    width: 100%;
    min-height: 150px;
    background-color: #FFF;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: flex-start;
}

.title {
    width: 100%;
    height: 20px;
    color: #646566;
    font-size: 13px;
    margin-left: 30rpx;
}
.upload-view {
    width: 100%;
    height: auto;
    /*background-color: #f5f5f5;*/
    padding-top: 8px;
}
.houseForm {
    width: 100%;
    height: auto;
    /*background-color: #f5f5f5;*/
    padding: 10px;
}

.house-item {
    width: calc(100% - 40px);
    padding: 10px;
    /* margin: 10px; */
    height: auto;
    /*background-color: #fff;*/
    /*border-radius: 20px;*/
    overflow: hidden;
    margin-bottom: 10px;
    border-radius: 10px;
    background: #FFF;
    box-shadow:  0 0 6px #d1d1d1,
    -5px -5px 6px #ffffff;

}

.fromAdd {
    width: calc(100% - 20px);
    height: 60px;
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
}

.deleteThis {
    width: calc(100% + 20px);
    height: 20px;
    position: relative;
    bottom: -10px;
    left: -10px;
    text-align: center;
    line-height: 15px;
    color: #FFF;
    background-color: #00a300;
}